<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:grid="sap.ui.layout.cssgrid" 
	xmlns:l="sap.ui.layout" xmlns:f="sap.f"	xmlns:cards="sap.f.cards"
	controllerName="com.hcl.CFIN-Report.controller.OverviewReportStructure" xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox alignItems="Center">
		<grid:CSSGrid gridTemplateColumns="1fr 1fr 1fr 1fr" gridGap="0rem">
			<VBox>
				<Image src="mime/oArrow.png" class="orBox"/>
				<Text text="Overview" class="sapUiTinyMarginBottom bldStlBl"/>
				<Text text="Report introduction" class="sapUiTinyMarginBottom "/>
			</VBox>
			<VBox>
				<Image src="mime/gArrow.png" class="orBox"/>
				<Text text="Executive Summary" class="sapUiTinyMarginBottom bldStlBl"/>
				<Text text="What we measured " class="sapUiTinyMarginBottom "/>
			</VBox>
			<VBox>
				<Image src="mime/bArrow.png" class="blBox"/>
				<Text text="Findings and Recommendations " class="sapUiTinyMarginBottom bldStlBl"/>
				<Text text="What we measured " class="sapUiTinyMarginBottom "/>
			</VBox>
			<VBox>
				<Image src="mime/grArrow.png" class="grBox"/>
				<Text text="Next Steps " class="sapUiTinyMarginBottom bldStlBl"/>
				<Text text="Relevant support offerings and services which help you to upgrade to desired level/ version " class="sapUiTinyMarginBottom"/>
			</VBox>
		</grid:CSSGrid>
		<HBox class="sapUiSmallMarginBottom">
			<Button type="Success" text="Source System" class="btnMrgn" width="135px"/>
			<Button type="Success" text="Target System" class="btnMrgn" width="135px"/>
			<Button type="Success" text="SLT" class="btnMrgn" width="135px"/>
		</HBox>
		<f:Card>
			<f:layoutData>
				<grid:ResponsiveColumnItemLayoutData columns="1" rows="4"/>
			</f:layoutData>
			<f:content>
				<grid:CSSGrid gridTemplateColumns="1fr 1fr 1fr" gridGap="0rem" width="900px">
					<VBox alignItems="Center" class="sapUiTinyMarginTop">
						<ImageContent src="sap-icon://functional-location" class="imgCnt"/>
						<Text text="Introduction" class="sapUiTinyMarginBottom bldStlBl"/>
						<List>
							<items>
								<StandardListItem wrapping="true" title=" &#8226; Overview about key value drivers "/>
							</items>
						</List>
					</VBox>
					<VBox alignItems="Center" class="sapUiTinyMarginTop">
						<ImageContent src="sap-icon://search" class="imgCnt" />
						<Text text="Findings " class="sapUiTinyMarginBottom bldStlBl"/>
						<List>
							<items>
								<StandardListItem wrapping="true" title=" &#8226; Overview of measured business key figures and functionalities "/>
								<StandardListItem wrapping="true" title=" &#8226; Relevant SAP S/4HANA innovations highlighted "/>
								<StandardListItem wrapping="true" title=" &#8226; Details and explanations about each findings "/>
							</items>
						</List>
					</VBox>
					<VBox alignItems="Center" class="sapUiTinyMarginTop">
						<ImageContent src="sap-icon://lightbulb" class="imgCnt" />
						<Text text="Recommendations and Recommendations " class="sapUiTinyMarginBottom bldStlBl"/>
						<List>
							<items>
								<StandardListItem wrapping="true"
									title=" &#8226; SAP best practice innovation recommendations including industry popularity and your current process coverage "/>
								<StandardListItem wrapping="true" title=" &#8226; Relevant SAP S/4HANA innovations highlighted "/>
								<StandardListItem wrapping="true" title=" &#8226; Learn about whatâ€™s new in each recommended business scenario "/>
							</items>
						</List>
					</VBox>
				</grid:CSSGrid>
			</f:content>
		</f:Card>
	</VBox>
</mvc:View>